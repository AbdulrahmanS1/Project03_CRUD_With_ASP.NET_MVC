
@model Merchent






<h1>Add Merchent page</h1>

<form asp-action="Create" method="post" class="form-horizantal">

    <div class="form-group">
        <label asp-for="Id">Id</label>
        <div>
            <input asp-for="Id" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <div>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <div>
            <input asp-for="Description" />
            <span asp-validation-for="Description" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <div>
            <input asp-for="Price" />
            <span asp-validation-for="Price" class="alert-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <input type="submit" class="btn-btn-primary" value="Submit" />
    </div>
</form>